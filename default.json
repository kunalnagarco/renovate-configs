{
  "dependencyDashboard": true,
  "extends": ["config:base", ":label(renovate)"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["CVE"]
  }
}
