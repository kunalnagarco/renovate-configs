{
  "dependencyDashboard": true,
  "extends": ["config:base", ":label(renovate)", ":enableVulnerabilityAlertsWithLabel(CVE)"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "schedule": ["at 9am every Saturday"],
  "timezone": "America/Toronto"
}
